{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "pnpm run dev", // package.jsonの起動したいscript
      "label": "pnpm: start", // launch.jsonから呼び出す際の名前
      "detail": "react-scripts start",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Compiling...",
          "endsPattern": "Compiled .*"
        }
      }
    }
  ],
  "configurations": [
    {
      "name": "Attach to Chrome",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
